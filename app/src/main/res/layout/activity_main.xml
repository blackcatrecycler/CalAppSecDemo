<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="top.recyclerblacat.calappdemp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/Txt1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Txt1"
        android:id="@+id/Lin1">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:id="@+id/Btn1"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="2"
            android:id="@+id/Btn2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/Lin1"
        android:orientation="vertical"
        android:id="@+id/Lin2">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="Btn1Click"
            android:text="3"
            android:id="@+id/Btn3"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="0"
            android:id="@+id/Btn0"/>
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="="
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="BtnEqualClick"
        android:id="@+id/BtnEuqal"></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="+"
        android:onClick="BtnAddClick"
        android:layout_alignParentBottom="true"
        android:id="@+id/BtnAdd"></Button>

</RelativeLayout>
